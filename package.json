{
	"name": "react-vite-webext",
	"description": "react-vite-webext",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "npm run clear && cross-env NODE_ENV=development run-p -l dev:*",
		"dev:prepare": "esno scripts/prepare.ts",
		"dev:web": "vite",
		"dev:js": "npm run build:js -- --mode development",
		"build": "cross-env NODE_ENV=production run-s -l clear build:web build:prepare build:js",
		"build:prepare": "esno scripts/prepare.ts",
		"build:web": "vite build",
		"build:js": "vite build --config vite.config.content.ts",
		"package": "cross-env NODE_ENV=production run-p -l package:*",
		"package:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
		"package:crx": "crx pack extension -o ./extension.crx",
		"package:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
		"start:chromium": "web-ext run --source-dir ./extension --target=chromium",
		"start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
		"test": "playwright test",
		"clear": "rimraf extension/dist extension/manifest.json extension.*",
		"lint": "eslint '{src,scripts}/**/*.{json,js,jsx,ts,tsx}'",
		"format": "prettier --write './**/*.{js,jsx,ts,tsx,css,json,md,yml}'",
		"format:check": "prettier --check './**/*.{js,jsx,ts,tsx,css,json,md,yml}'",
		"typecheck": "tsc --noEmit",
		"prepare": "is-ci || husky install"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,css}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"zustand": "^4.3.8"
	},
	"devDependencies": {
		"@ffflorian/jszip-cli": "^3.4.1",
		"@playwright/test": "^1.34.3",
		"@types/fs-extra": "^11.0.1",
		"@types/node": "^18.16.16",
		"@types/react": "^18.2.7",
		"@types/react-dom": "^18.2.4",
		"@types/webextension-polyfill": "^0.10.0",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"@vitejs/plugin-react": "^4.0.0",
		"autoprefixer": "^10.4.14",
		"chokidar": "^3.5.3",
		"cross-env": "^7.0.3",
		"crx": "^5.0.1",
		"eslint": "^8.41.0",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"esno": "^0.16.3",
		"fs-extra": "^11.1.1",
		"husky": "^8.0.3",
		"is-ci": "^3.0.1",
		"kolorist": "^1.8.0",
		"lint-staged": "^13.2.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.24",
		"prettier": "^2.8.8",
		"rimraf": "^5.0.1",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.0.4",
		"unplugin-auto-import": "^0.16.4",
		"vite": "^4.3.9",
		"web-ext": "^7.6.2",
		"webext-bridge": "^6.0.1",
		"webextension-polyfill": "^0.10.0"
	}
}
